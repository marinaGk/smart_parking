</head>

<body>

    <div class = "modal-container-confirmation">

        <div class = "modal-popup-confirmation"> 

            <p> Are you certain you want to leave? </p>

            <div class = "form-buttons"> 
                <button class = "confirm"> 
                    Yes
                </button>
                <button class = "cancel">
                    No 
                </button>
            </div>

        </div>

    </div>

    {{{body}}}

    <div id = "footer"> 
        <ul class = "footer-buttons m-0 p-0">
            <li class = "choice-button" id = "back"> 
                <div class = "button">
                    <a> 
                
                        <svg xmlns="http://www.w3.org/2000/svg" width="60%" height="60%" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                        </svg>
                        
                    </a>
                </div> 
            </li>
            <li class = "choice-button" id = "account"> 
                <div class = "button" > 
                    <a href = "#"> 
                        <svg xmlns="http://www.w3.org/2000/svg" width="60%" height="60%" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                        </svg>
                    </a>
                </div>
            </li>
        </ul>     
    </div>

    <script>
        document.getElementById("back").onclick = function() {
            console.log('clicked');
            if(window.location.pathname == "/map_planning" & localStorage.getItem('state') == 'false') { 

                let modal = document.querySelector('.modal-container-confirmation');
                let confirm = document.querySelector('.confirm'); 
                let cancel = document.querySelector('.cancel'); 
                
                modal.style.display = 'block';
                modal.style.zIndex= 1050; 

                confirm.onclick = function() { 
                    localStorage.removeItem('state');
                    localStorage.removeItem('currentLocation');
                    localStorage.removeItem('time');
                    localStorage.removeItem('date');
                    window.location = "/";
                }
                
                cancel.onclick = function() { 
                    modal.style.zIndex = -1050;
                    modal.style.display = 'none';
                }    
                
            }
            else { 
                window.location.pathname = "/";
            }
        }
    </script>
    
</body> 

